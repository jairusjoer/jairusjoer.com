---
import { Image } from 'astro:assets';
import { parse } from 'marked';

import profileData from '../assets/read.cv/profileData.json';
import profilePhoto from '../assets/read.cv/media/profilePhoto.jpg';
---

<header class="mx-auto max-w-xl px-4">
  <div class="flex items-center gap-4">
    <Image
      class="size-24"
      src={profilePhoto}
      alt={profileData.general.displayName}
      loading="eager"
    />
    <div>
      <h1 class="text-foreground font-headings text-xl font-medium">{profileData.general.displayName}</h1>
      <p>{profileData.general.byline}</p>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-foreground font-headings font-medium">About</h2>
    <div
      class="prose prose-sm prose-theme mt-4"
      set:html={parse(profileData.general.about)}
    />
  </div>
</header>
