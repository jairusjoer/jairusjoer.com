---
import { Image } from 'astro:assets';

interface Props {
  image?: string;
  title: string;
  subtitle?: string;
}

const { image, title, subtitle } = Astro.props;
---

<header
  class="mb-4 flex gap-4"
  transition:persist
>
  {
    image && (
      <Image
        class="size-12 rounded-lg object-cover"
        src={image}
        alt={title}
        width="48"
        height="48"
        format="avif"
        loading="eager"
      />
    )
  }
  <div class="grid items-center">
    <span class="text-foreground font-medium">{title}</span>
    {subtitle && <span>{subtitle}</span>}
  </div>
</header>
