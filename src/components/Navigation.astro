---
// Navigation.astro
interface Props {
  pages: Record<string, string>;
}

const { pages } = Astro.props;

const isCurrentPath = (path: string) => Astro.url.pathname === path;
---

<nav
  class="font-headings py-4 font-medium print:hidden"
  style="view-transition-name: nav"
>
  <ul class="flex flex-wrap gap-2">
    {
      Object.entries(pages).map(([title, href]) => (
        <li>
          <a
            class:list={{
              'block rounded px-1': true,
              'text-foreground bg-background-subtle font-medium': isCurrentPath(href),
            }}
            href={href}
          >
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
