---
import { formatDatetime } from 'src/scripts/formatDatetime';
import { getUniqueId } from 'src/scripts/getUniqueId';

export interface Props {
  title: string;
  description?: string;
  date?: Date | string;
}

const { title, description, date } = Astro.props;
---

<section
  class="print:not-first:mt-18"
  style={`view-transition-name: ${getUniqueId()}`}
>
  <div class="grid break-inside-avoid items-start gap-x-6 border-t md:grid-cols-2">
    <header
      class="bg-background sticky -top-px z-20 py-6 md:bg-transparent print:static print:bg-transparent"
      style={`view-transition-name: ${getUniqueId()}`}
    >
      <div class="max-w-prose">
        <h2 class="text-foreground font-semibold">
          {title}
        </h2>
        {description && <p>{description}</p>}
        {date && <time datetime={new Date(date).toISOString()}>{formatDatetime(date)}</time>}
      </div>
    </header>

    <div class="space-y-6 py-6 max-md:border-t">
      <slot />
    </div>
  </div>
</section>
