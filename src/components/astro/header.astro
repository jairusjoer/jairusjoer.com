---
import { Image } from 'astro:assets';

interface Props {
  image?: string;
  title: string;
  subtitle?: string;
}

const { image, title, subtitle } = Astro.props;
---

<header
  class="relative mb-16 flex gap-4"
  style="view-transition-name: header"
>
  {
    image && (
      <Image
        class="size-12 object-cover"
        src={image}
        alt={title}
        width="384"
        height="384"
        format="avif"
        loading="eager"
      />
    )
  }
  <div class="grid items-center">
    <span class="text-foreground font-headings font-medium">{title}</span>
    {subtitle && <span>{subtitle}</span>}
    <a
      class="text-theme-foreground hidden underline print:block"
      href="https://jairusjoer.com"
    >
      jairusjoer.com
    </a>
  </div>
  <a
    class="rounded-inner absolute inset-0"
    href="/"
    title="Return to homepage"
    aria-label="Return to homepage"
  ></a>
</header>
