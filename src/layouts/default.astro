---
import '../styles/tailwind.css';
import Meta from '../components/astro/meta.astro';
import type { Metadata } from '../types';
import Header from '../components/astro/header.astro';
import Footer from '../components/astro/footer.astro';
import Navigation from 'src/components/astro/navigation.astro';

interface Props {
  metadata?: Metadata;
}

const { metadata } = Astro.props;
---

<html
  lang="en"
  class="bg-background antialiased print:bg-transparent print:scheme-light"
>
  <head>
    <Meta {metadata} />
  </head>
  <body class="text-foreground-subtle flex min-h-screen flex-col px-4 py-16 text-sm leading-6 print:p-0">
    <div
      id="root"
      class="font-body mx-auto flex w-full max-w-xl flex-col"
    >
      <Header
        image={`${Astro.url.origin}/favicon.png`}
        title="Jairus Joer"
        subtitle="Full Stack Developer & Design Systems Expert, Germany, He/him"
      />

      <Navigation
        pages={{
          About: '/',
          Blog: '/blog/',
          Links: '/links/',
        }}
      />
      <slot />
      <Footer
        pages={{
          Imprint: '/imprint/',
          Privacy: '/privacy/',
        }}
      />
    </div>
    <script>
      import { useExternalizedLinks } from '../composables';
      useExternalizedLinks();
    </script>
  </body>
</html>
