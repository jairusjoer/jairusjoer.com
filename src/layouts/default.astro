---
import '../styles/tailwind.css';
import type { Metadata } from '../types';
import Header from '../components/astro/header.astro';
import Footer from '../components/astro/footer.astro';
import Navigation from 'src/components/astro/navigation.astro';
import Base from './base.astro';

interface Props {
  metadata?: Metadata;
}

const { metadata } = Astro.props;
---

<Base {metadata}>
  <Header
    image={`${Astro.url.origin}/favicon.png`}
    title="Jairus Joer"
    subtitle="Full Stack Developer & Design Systems Specialist, Germany, He/him"
  />

  <Navigation
    pages={{
      About: '/',
      Blog: '/blog/',
      Links: '/links/',
    }}
  />
  <slot />
  <Footer
    pages={{
      Imprint: '/imprint/',
      Privacy: '/privacy/',
    }}
  />
</Base>
