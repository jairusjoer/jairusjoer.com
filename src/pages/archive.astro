---
import Default from '../layouts/default.astro';
import Category from '../components/astro/category.astro';
import Links from 'src/components/astro/links.astro';
import Entry from 'src/components/astro/entry.astro';
import { getCollection } from 'astro:content';
import Feed from 'src/components/astro/feed.astro';

const links = await getCollection('links');

const data = {
  title: 'Archive',
  description: 'Curated collection of my favorites from the web',
};
---

<Default metadata={data}>
  <main>
    <Category {...data}>
      <Entry
        content={{
          title: 'Aggregata',
          meta: 'Articles previously published on Aggregata',
        }}
      >
        <Feed filter="archive/aggregata/" />
      </Entry>

      <Entry
        content={{
          title: 'Links',
          meta: 'Evergrowing collection of my favorite websites',
        }}
      >
        <Links data={links} />
      </Entry>
    </Category>
  </main>
</Default>
